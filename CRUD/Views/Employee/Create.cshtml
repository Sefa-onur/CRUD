@model CRUD.Models.Employee

<form asp-action = "Create" asp-controller = "Employee" >
	<div class = "form-group" >
		<label class = "form-label" >First Name</label>
		<input asp-for = "@Model.Name"  class = "form-control" />
		<span asp-validation-for = "@Model.Name" class = "text-danger" ></span>
	</div>
	<div class = "form-group" >
		<label class = "form-label">Last Name</label>
		<input asp-for = "@Model.Surname" class = "form-control" />
		<span asp-validation-for = "@Model.Surname" class = "text-danger" ></span>
	</div>
	<div class = "form-group" >
		<label class = "form-label">Position</label>
		<input asp-for = "@Model.Position" class = "form-control" />	
		<span asp-validation-for = "@Model.Position" class = "text-danger" ></span>
	</div> 
		 <button type = "submit" class = "btn btn-primary d-block mt-4" >Create</button>
</form>
